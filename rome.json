{
	"$schema": "./node_modules/rome/configuration_schema.json",
	"files": {
		"ignore": ["./packages/**/dist/*", "./packages/**/build/*", "./examples/**/dist/*"]
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 100,
		"indentStyle": "tab"
	},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded"
		}
	},
	"linter": {
		"enabled": false,
		"rules": {
			"recommended": true,

			"style": {
				"useBlockStatements": "off",
				"useTemplate": "off",
				"noNegationElse": "off",
				"noShoutyConstants": "off",
				"noImplicitBoolean": "off",
				"useSelfClosingElements": "off"
			},
			"performance": {
				"noDelete": "off"
			},
			"correctness": {
				"noUnreachable": "off"
			},
			"security": {
				"noDangerouslySetInnerHtml": "off"
			},
			"nursery": {},
			"a11y": {
				"useKeyWithClickEvents": "off",
				"useValidAnchor": "off"
			},
			"complexity": {
				"useSimplifiedLogicExpression": "off"
			}
		}
	}
}
